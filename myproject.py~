from werkzeug.wrappers import Request, Response

from OpenSSL import SSL
context = SSL.Context(SSL.SSLv23_METHOD)
context.use_privatekey_file('/home/johnny/Desktop/ESCGProject/privkey.pem')
context.use_certificate_file('/home/johnny/Desktop/ESCGProject/cacert.pem')

#import ssl
#context = ssl.SSLContext(ssl.PROTOCOL_TLSv1_2)
#context.load_cert_chain('/home/johnny/Desktop/ESCGProject/cacert.pem', '/home/johnny/Desktop/ESCGProject/privkey.pem')

@Request.application
def application(request):
    return Response('Hello World!')

if __name__ == '__main__':
    from werkzeug.serving import run_simple
    run_simple('localhost', 4000, application, ssl_context=context)
